# git-cmp: Commit with message and Push
# Usage: git-cmp "Your commit message here"
git-cmp() {
  if [ -z "$1" ]; then
    echo "Error: Please provide a commit message."
    echo "Usage: git-cmp \"Your commit message\""
    return 1
  fi

  echo "Committing with message: \"$1\""
  # Commit the changes using the first argument as the message
  git commit -m "$1"

  # Check if the commit was successful before pushing
  if [ $? -eq 0 ]; then
    echo "Commit successful. Pushing changes..."
    # Push the changes to the remote repository
    git push
  else
    echo "Commit failed. Aborting push."
    return 1
  fi
}
